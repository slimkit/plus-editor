html
body {
  margin: 0;
  padding: 0;
  height: 100%;
}

.quill-editor-wrap {
  position: relative;
  height: 100%;

  .hidden-input {
    display: none;
  }

  .ql-toolbar {
    position: fixed;
    bottom: 0;
    z-index: 10;
    width: 100%;
    height: 42px;
    border-width: 1px 0 0;
    background-color: #fff;
  }

  .ql-container {
    overflow: auto;
    padding-bottom: 42 + 12px;
    min-height: 0;
    border: none;

    .ql-editor {
      height: 100%;
    }
  }

  .ql-editor.ql-blank::before {
    position: absolute;
    right: 15px;
    left: 15px;
    color: rgba(204, 204, 204, 1);
    content: attr(data-placeholder);
    font-style: normal;
    pointer-events: none;
  }

  .ql-tooltip {
    z-index: 20;
  }

  .ql-snow .ql-tooltip[data-mode=link]::before {
    content: '请输入链接地址:';
  }

  .ql-snow .ql-tooltip.ql-editing a.ql-action::after {
    padding-right: 0;
    border-right: 0;
    content: '保存';
  }

  .ql-snow .ql-tooltip::before {
    margin-right: 8px;
    content: '预览地址:';
    line-height: 26px;
  }

  .ql-snow .ql-tooltip a.ql-action::after {
    margin-left: 16px;
    padding-right: 8px;
    border-right: 1px solid #ccc;
    content: '编辑';
  }

  .ql-snow .ql-tooltip a.ql-remove::before {
    margin-left: 8px;
    content: '移除';
  }
}

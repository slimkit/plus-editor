// 这里的样式也会影响到移动端的展示, 谨慎修改
body {
	margin: 0;
}

.ql-editor {
	padding: 12px 15px;
	height: auto;
	color: rgba(102, 102, 102, 1);
	font-size: 14px;

	img {
		max-width: 100%;
	}

	video {
		max-width: 100%;
		&:before {
			content: '';
			width: 20vw;
			height 20vw;
			background-color: red;	
		}
	}

	.quill-image, .quill-video {
		display: block;
		margin: auto;
	}
}
